#!/usr/bin/env swipl
user:file_search_path(python, 'python').
user:file_search_path(bbc, 'prolog').
:- use_module(prolog/swimpd/swimpd).

local(ip(127,0,0,1)).
local(ip(192,168,1,_)).

main([A1]) :- atom_number(A1, Port), mpd_init, start_mpd(Port, [allow(local)]), start_gst_thread(50).
:- current_prolog_flag(argv, Argv), main(Argv).
% vim: ft=prolog
